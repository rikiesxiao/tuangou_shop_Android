<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/money_cell_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="2017-06-06\n17:22:11"
        android:textSize="13sp"
        />

    <ImageView
        android:id="@+id/money_cell_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/money_add"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/money_cell_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="50000.00"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/money_cell_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#888888"
            android:gravity="center_vertical"
            android:text="待审核"
            android:layout_weight="1"
            />

    </LinearLayout>


</LinearLayout>