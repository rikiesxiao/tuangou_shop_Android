<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="#ccc"/>
            <corners android:radius="4dp" />
        </shape>
    </item>

    <!-- 给View的上 左  右设置8dp的边框 -->
    <item android:top="0.5dp" android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" >
        <shape>
            <!--     View填充颜色 -->
            <solid android:color="#FFFFFF" />
            <corners android:radius="4dp" />
        </shape>

    </item>

</layer-list>